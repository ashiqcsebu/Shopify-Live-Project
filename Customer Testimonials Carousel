<script>
(function() {
  const carousel = document.querySelector('[data-carousel]');
  if (!carousel) return;

  const track = carousel.querySelector('[data-track]');
  const prevBtn = document.querySelector('[data-prev]');
  const nextBtn = document.querySelector('[data-next]');
  const dotsContainer = document.querySelector('[data-dots]');
  const slides = Array.from(track.children);
  
  // Settings
  const autoSlideEnabled = {{ section.settings.enable_autoplay }};
  const autoSlideDelay = {{ section.settings.autoplay_delay | times: 1000 }};
  
  let currentIndex = 0;
  let autoSlideInterval;
  let itemsPerView = 1;

  // Calculate items per view based on screen size
  function getItemsPerView() {
    if (window.innerWidth >= 1024) return 3;
    if (window.innerWidth >= 640) return 2;
    return 1;
  }

  // Get total pages
  function getTotalPages() {
    return Math.ceil(slides.length / itemsPerView);
  }

  // Create dots
  function createDots() {
    dotsContainer.innerHTML = '';
    const totalPages = getTotalPages();
    
    for (let i = 0; i < totalPages; i++) {
      const dot = document.createElement('button');
      dot.className = 'testimonials__dot';
      dot.setAttribute('aria-label', `Go to page ${i + 1}`);
      if (i === 0) dot.classList.add('testimonials__dot--active');
      
      dot.addEventListener('click', () => goToSlide(i));
      dotsContainer.appendChild(dot);
    }
  }

  // Update dots
  function updateDots() {
    const dots = dotsContainer.querySelectorAll('.testimonials__dot');
    const currentPage = Math.floor(currentIndex / itemsPerView);
    
    dots.forEach((dot, index) => {
      dot.classList.toggle('testimonials__dot--active', index === currentPage);
    });
  }

  // Go to specific slide
  function goToSlide(pageIndex) {
    currentIndex = pageIndex * itemsPerView;
    const maxIndex = slides.length - itemsPerView;
    
    if (currentIndex > maxIndex) {
      currentIndex = maxIndex;
    }
    
    const offset = -(currentIndex * (100 / itemsPerView));
    track.style.transform = `translateX(${offset}%)`;
    updateDots();
    
    if (autoSlideEnabled) {
      resetAutoSlide();
    }
  }

  // Next slide
  function nextSlide() {
    const totalPages = getTotalPages();
    const currentPage = Math.floor(currentIndex / itemsPerView);
    const nextPage = (currentPage + 1) % totalPages;
    goToSlide(nextPage);
  }

  // Previous slide
  function prevSlide() {
    const totalPages = getTotalPages();
    const currentPage = Math.floor(currentIndex / itemsPerView);
    const prevPage = (currentPage - 1 + totalPages) % totalPages;
    goToSlide(prevPage);
  }

  // Auto slide
  function startAutoSlide() {
    if (autoSlideEnabled) {
      autoSlideInterval = setInterval(nextSlide, autoSlideDelay);
    }
  }

  function stopAutoSlide() {
    if (autoSlideInterval) {
      clearInterval(autoSlideInterval);
    }
  }

  function resetAutoSlide() {
    stopAutoSlide();
    startAutoSlide();
  }

  // Handle resize
  function handleResize() {
    const newItemsPerView = getItemsPerView();
    
    if (newItemsPerView !== itemsPerView) {
      itemsPerView = newItemsPerView;
      createDots();
      goToSlide(0);
    }
  }

  // Event listeners
  prevBtn.addEventListener('click', prevSlide);
  nextBtn.addEventListener('click', nextSlide);
  
  // Pause on hover
  carousel.addEventListener('mouseenter', stopAutoSlide);
  carousel.addEventListener('mouseleave', () => {
    if (autoSlideEnabled) startAutoSlide();
  });

  // Touch/swipe support
  let touchStartX = 0;
  let touchEndX = 0;

  carousel.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
    stopAutoSlide();
  });

  carousel.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
    if (autoSlideEnabled) startAutoSlide();
  });

  function handleSwipe() {
    const swipeThreshold = 50;
    const diff = touchStartX - touchEndX;
    
    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0) {
        nextSlide();
      } else {
        prevSlide();
      }
    }
  }

  // Initialize
  window.addEventListener('resize', handleResize);
  itemsPerView = getItemsPerView();
  createDots();
  startAutoSlide();
})();
</script>

