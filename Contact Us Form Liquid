    --left-desc-fs: {{ section.settings.left_desc_fs }}px;
    --left-detail-fs: {{ section.settings.left_detail_fs }}px;
  }

  /* Success Modal - Polished Style */
  .contact-success-modal {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10001;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.4s ease;
    backdrop-filter: blur(4px);
  }

  .contact-success-modal.is-active {
    opacity: 1;
    visibility: visible;
  }

  .success-modal-content {
