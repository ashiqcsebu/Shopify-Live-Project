  .field-box label { display: block; font-size: var(--lbl-size); font-weight: 700; color: var(--lbl-color); text-transform: uppercase; margin-bottom: 5px; }
  
  .field-box input:not([type="checkbox"]):not([type="radio"]), 
  .field-box select, .field-box textarea { width: 100%; border: none; outline: none; padding: 5px 0; font-size: var(--input-size); background: transparent; color: var(--input-color); }

  .row-opt { grid-column: span 2; margin-top: 15px; }
  .row-opt-lbl { font-weight: 700; font-size: var(--lbl-size); margin-bottom: 15px; display: block; color: var(--lbl-color); text-transform: uppercase;}
  
