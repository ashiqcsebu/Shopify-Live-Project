<div class="section-{{ section.id }}">
  <div class="form-wrap-{{ section.id }}">
    
    <div class="info-side">
      <div>
        <h2>{{ section.settings.title }}</h2>
        <p class="desc-text">{{ section.settings.desc }}</p>
        <div class="contact-details-wrap">
          {% if section.settings.ph != blank %}<p>üìû {{ section.settings.ph }}</p>{% endif %}
          {% if section.settings.em != blank %}<p>‚úâÔ∏è {{ section.settings.em }}</p>{% endif %}
          {% if section.settings.addr != blank %}<p>üìç {{ section.settings.addr }}</p>{% endif %}
        </div>
      </div>
    </div>

    <div class="form-side">
      {% form 'contact', id: 'ContactForm' %}
        
        {% if form.posted_successfully? %}
          <div id="SuccessModal-{{ section.id }}" class="contact-success-modal is-active">
            <div class="success-modal-content">
              <div class="icon-circle">‚úì</div>
              <p class="text">{{ section.settings.success_msg }}</p>
            </div>
          </div>
          <script>
            window.addEventListener('load', function() {
              const modal = document.getElementById('SuccessModal-{{ section.id }}');
              if(modal) {
                if(window.location.hash === '#ContactForm') {
                  history.replaceState(null, null, window.location.pathname);
                }
                setTimeout(function() {
                  modal.classList.remove('is-active');
                  setTimeout(() => modal.style.display = 'none', 400);
                }, 3000);
              }
            });
          </script>
        {% endif %}

        <div class="form-grid">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'text' %}
                <div class="field-box {% if block.settings.full %}full{% endif %}">
                  <label>{{ block.settings.lbl }}{% if block.settings.req %} *{% endif %}</label>
                  <input type="text" name="contact[{{ block.settings.lbl | handle }}]" placeholder="{{ block.settings.plc }}" {% if block.settings.req %}required{% endif %}>
                </div>
              {% when 'email' %}
                <div class="field-box {% if block.settings.full %}full{% endif %}">
                  <label>{{ block.settings.lbl }}{% if block.settings.req %} *{% endif %}</label>
                  <input type="email" name="contact[email]" placeholder="{{ block.settings.plc }}" {% if block.settings.req %}required{% endif %}>
                </div>
              {% when 'phone' %}
                <div class="field-box {% if block.settings.full %}full{% endif %}">
                  <label>{{ block.settings.lbl }}{% if block.settings.req %} *{% endif %}</label>
                  <input type="tel" name="contact[phone]" placeholder="{{ block.settings.plc }}" {% if block.settings.req %}required{% endif %}>
                </div>
              {% when 'dropdown' %}
                <div class="field-box {% if block.settings.full %}full{% endif %}">
                  <label>{{ block.settings.lbl }}{% if block.settings.req %} *{% endif %}</label>
                  <select name="contact[{{ block.settings.lbl | handle }}]" {% if block.settings.req %}required{% endif %}>
                    <option value="" disabled selected>{{ block.settings.plc }}</option>
                    {% assign os = block.settings.os | split: ',' %}
                    {% for o in os %}
                      <option value="{{ o | strip }}">{{ o | strip }}</option>
                    {% endfor %}
                  </select>
                </div>
              {% when 'row' %}
                <div class="row-opt">
                  <span class="row-opt-lbl">{{ block.settings.lbl }}{% if block.settings.req %} *{% endif %}</span>
                  <div class="row-flex">
                    {% assign os = block.settings.os | split: ',' %}
                    {% for o in os %}
                      <label class="row-item">
                        <input type="{{ block.settings.t }}" 
                          {% if block.settings.t == 'radio' %}
                            name="contact[{{ block.settings.lbl | handle }}]" {% if block.settings.req %}required{% endif %}
                          {% else %}
                            name="contact[{{ block.settings.lbl | handle }}_{{ forloop.index }}]" 
                          {% endif %}
                          value="{{ o | strip }}"> {{ o | strip }}
                      </label>
                    {% endfor %}
                  </div>
                </div>
              {% when 'area' %}
                <div class="field-box full">
                  <label>{{ block.settings.lbl }}{% if block.settings.req %} *{% endif %}</label>
                  <textarea rows="2" name="contact[msg]" placeholder="Write message..." {% if block.settings.req %}required{% endif %}></textarea>
                </div>
            {% endcase %}
          {% endfor %}
          <div class="btn-box">
            <button type="submit" class="btn-submit">{{ section.settings.btn }}</button>
          </div>
        </div>
      {% endform %}
    </div>
  </div>
</div>

